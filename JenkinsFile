pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        stage('Test'){
            steps{
                sh '''
<<<<<<< HEAD
                    echo 'Testing Stage'
                    test -f build/index.html
=======
                    test -f build/index.html
                    echo 'Testing stage ....'
>>>>>>> 3c7c07a (add: "added and edited test stage for the pipeline ")
                    npm test
                '''
            }
        }
    }
}
